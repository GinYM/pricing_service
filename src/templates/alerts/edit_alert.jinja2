{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Edit Alert</h1>
    </div>
    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="name">Alert/Item Name</label>
                <input id="name" name="name" class="form-control" type="text" placeholder="Name" value="{{ alert.item.name }}" disabled>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input id="url" name="url" class="form-control" type="text" placeholder="http://..." value="{{ alert.item.url }}" disabled>
            </div>
            <div class="form-group">
                <label for="price_limit">Alert Limit</label>
                <input id="price_limit" name="price_limit" class="form-control" type="text" placeholder="45.0" value="{{ alert.price_limit }}" aria-describedby="priceLimitBlock">
                <p id="priceLimitBlock" class="help-block">We'll send you email when price reaches this or goes under this.</p>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
{% endblock %}