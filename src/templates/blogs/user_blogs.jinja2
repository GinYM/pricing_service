{% extends "base.jinja2" %}
{% block content %}
    <div class="container user_blog_form">
        <h1>
            <span><strong>{{ email }}</strong>'s Blog</span>
            <span style="float:right"><a class="btn btn-primary" href="/blogs/new" role="button">New Blog</a></span>
        </h1>

        {% for blog in blogs %}
            {% if blog.secret %}
                {% if session['email'] %}
                    <h2><a href="{{ url_for('blogs.posts',blog_id=blog._id) }}">{{ blog.title }}</a> </h2>
                    <p>{{ blog.description }}</p>
                    <hr/>
                {% endif %}
            {% else %}
                <h3><a href="{{ url_for('blogs.posts',blog_id=blog._id) }}">{{ blog.title }}</a></h3>
                <p>{{ blog.description }}</p>
                <hr/>
            {% endif %}

        {% endfor %}

    </div>

{% endblock %}