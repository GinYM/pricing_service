{% extends "base.jinja2" %}
{% block content %}

    <script>
        function delete_alert(){
            return confirm("Are you sure to delete?");
        }

    </script>

    <div class="container post_form">

        <h2>
            <div>
                <span class="span-test">{{ blog_title }}</span>
                <div class="pull-right">
                    <span class="span-button button-font" >
                        <a href="{{ url_for('blogs.posts',blog_id=blog_id) }}" class="btn btn-success post_button">
                            Done
                        </a>
                    </span>
                </div>
            </div>
        </h2>
        <hr />



        {% if posts|length > 0 %}
            {% for post in posts %}
                <div class="post-content">
                    <h2>{{ post.title }} &bull; {{ post.date.strftime("%m-%d-%Y") }}
                        <div class="pull-right">

                    <span class="span-button button-font" >
                        <a href="{{ url_for('blogs.edit_post',post_id=post._id) }}" class="btn btn-warning post_button" >
                            Edit
                        </a>
                    </span>

                            <span class="span-button button-font" >
                        <a onclick="return delete_alert();"  href="{{ url_for('blogs.delete_post',post_id=post._id) }}" class="btn btn-danger post_button text-right">
                            Delete
                        </a>
                    </span>
                        </div>
                    </h2>

                </div>
                <hr/>
            {% endfor %}
        {% else %}
            <h4>There aren't any posts yet!</h4>
        {% endif %}
    </div>
{% endblock %}